# Database Configuration
MONGO_URI=mongodb://localhost:27017/n-queens-game
# Production: MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/n-queens-game

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-secure

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (comma-separated allowed origins)
CLIENT_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:8100

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# App Metadata
APP_VERSION=1.0.0

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id

# Redis Configuration (for scaling)
REDIS_URL=redis://localhost:6379

# Production Security
SESSION_SECRET=another-super-secret-key-for-sessions
ENCRYPTION_KEY=32-character-encryption-key-here